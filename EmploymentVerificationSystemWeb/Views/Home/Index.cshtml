<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Centered Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .form-container {
            max-width: 500px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 50%;
            margin: 0 auto;
        }

        #loader {
            position: fixed;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            z-index: 9999; /* Ensure it's on top of other content */
        }
    </style>
</head>
<body>
    <div id="loader" style="display:none;">
        <img src="~/images/loader.gif" alt="Loading..." />
    </div>
    <div class="container-fluid">
        <div class="form-container ">
            <h3 class="text-center mb-4">Employee Verification</h3>
            <form>
                <div class="mb-3">
                    <label for="input1" class="form-label">Employee ID</label>
                    <input type="text" class="form-control" id="employeeId" placeholder="Enter Employee Id">
                </div>
                <div class="mb-3">
                    <label for="input2" class="form-label">Company name </label>
                    <input type="text" class="form-control" id="companyName" placeholder="Enter Company name">
                </div>
                <div class="mb-3">
                    <label for="input3" class="form-label">Verification code</label>
                    <input type="text" class="form-control" id="verificationCode" placeholder="Enter Verification code">
                </div>
                <div>
                    <button type="button" class="btn btn-primary" onclick="Verify()">Verify</button>
                </div>
            </form>
        </div>
    </div>
    @section Scripts {
        <script>
                // $(document).ajaxStart(function () {
                //     $('#loader').show();
                // });

                // $(document).ajaxStop(function () {
                //     $('#loader').hide();
                // });

                function Verify() {
                    var employeeId = $('#employeeId').val();
                    var companyName = $('#companyName').val();
                    var verificationCode = $('#verificationCode').val();

                    let EmploymentVerificationRequest = {
                        employeeId: employeeId,
                        companyName: companyName,
                        verificationCode: verificationCode
                    };

                    $.ajax({
                        url: '/Home/VerifyEmployment',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify(EmploymentVerificationRequest),
                        success: function (response) {
                        $('#loader').hide();
                            alert("" + response.message + "");

                        },
                        error: function (xhr, status, error) {
                        $('#loader').hide();
                            alert(xhr);
                        }
                    });
                }
        </script>
    }
</body>
</html>
